<!DOCTYPE html>

<html class="has-navbar-fixed-top">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SMS: VIT Chennai</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <!-- Bulma Version 0.7.2-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.2/css/bulma.min.css" />
    <link rel="stylesheet" type="text/css" href="../public/css/admin.css">
    <script language="javascript">
    function ReqSub(c1){
      console.log("Post Requested for subject registration");
      oFormObject = document.forms['coursesubmit'];
      oFormElement = oFormObject.elements['coursecode'];
      oFormElement.value = c1;
      oFormObject.submit();
      console.log(c1+"is Registered");
    }
    </script>
</head>



<body>
    <form action="/registercourse" method="POST" id="coursesubmit">
      <input type="text" name="coursecode" id="coursecode" hidden />
    </form>
    <!-- START NAV -->
    <nav class="navbar is-dark is-fixed-top">
        <div class="container">
            <div class="navbar-brand">
                <a class="navbar-item brand-text" href="dashboard.html">
                    VIT Chennai
                </a>
                <div class="navbar-burger burger" data-target="navMenu">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
            <div id="navMenu" class="navbar-menu">
                <div class="navbar-start">
                    <a class="navbar-item" href="dashboard.html">
                        Home
                    </a>
                    <a class="navbar-item" href="dashboard.html">
                        Timetable
                    </a>
                    <a class="navbar-item" href="dashboard.html">
                        Results
                    </a>
                    <a class="navbar-item" href="dashboard.html">
                        Payments

                    </a>
                </div>

            </div>
        </div>
    </nav>
    <!-- END NAV -->
    <br>
    <div class="container">
        <div class="columns">
            <div class="column is-3 is-dark">
                <aside class="menu is-hidden-mobile">
                    <p class="menu-label">
                        General
                    </p>
                    <ul class="menu-list">
                        <li><a>Dashboard</a></li>
                        <li><a>Your Profile</a></li>
                    </ul>

                    <p class="menu-label">
                        Winter Semester 2018-19
                    </p>
                    <ul class="menu-list">
                        <li><a>Courses</a></li>
                        <li><a>Digital Assignments</a></li>
                        <li><a>Course Materials</a></li>
                    </ul>
                </aside>
            </div>

            <div class="column is-9">
                <!--nav class="breadcrumb" aria-label="breadcrumbs">
                    <ul>
                        <li><a href="../">Bulma</a></li>
                        <li><a href="../">Templates</a></li>
                        <li><a href="../">Examples</a></li>
                        <li class="is-active"><a href="#" aria-current="page">Admin</a></li>
                    </ul>
                </nav-->
                <section class="hero is-info welcome is-small">
                    <div class="hero-body">
                        <div class="container">
                            <h1 class="title">
                                <%= name %>
                            </h1>
                            <h2 class="subtitle">
                                <%= register %>
                            </h2>
                            <h2 class="subtitle">
                                <%= email %>
                        </div>
                    </div>
                </section>
                <section class="info-tiles">
                    <div class="tile is-ancestor has-text-centered">
                        <div class="tile is-parent">
                            <article class="tile is-child box">
                                <p class="subtitle has-text-weight-bold has-text-black">Search for your Courses</p>
                                <div class="field">
                                    <div class="control">
                                        <!--input class="input is-hovered" type="text" id="search" placeholder="Search for Courses"></input-->
                                        <input class="input is-hovered" type="text" id="search" onkeyup="searchFunction()" placeholder="Search for courses.." title="Type a Courses">
                                        <br>
                                    </div>


                            </article>
                        </div>
                    </div>
                </section>
                <table class="table" id="courseTable">
                    <thead>
                        <tr>
                            <th><abbr title="Serial no.">S.no</abbr></th>
                            <th><abbr title="Course Code">C Code.</abbr></th>
                            <th><abbr title="Course Name">Name</abbr></th>
                            <th><abbr title="Lecture">L</abbr></th>
                            <th><abbr title="Theory">T</abbr></th>
                            <th><abbr title="Practical">P</abbr></th>
                            <th><abbr title="Project">J</abbr></th>
                            <th><abbr title="Cummulative">C</abbr></th>
                            <th>Register</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th><abbr title="Serial no.">S.no</abbr></th>
                            <th><abbr title="Course Code">C Code.</abbr></th>
                            <th><abbr title="Course Name">Name</abbr></th>
                            <th><abbr title="Lecture">L</abbr></th>
                            <th><abbr title="Theory">T</abbr></th>
                            <th><abbr title="Practical">P</abbr></th>
                            <th><abbr title="Project">J</abbr></th>
                            <th><abbr title="Cummulative">C</abbr></th>
                            <th>Register</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        <% courselist.forEach(function(course, index) { %>
                        <tr>
                            <td><%= index+1 %></td>
                            <td><%= course.Coursecode %></td>
                            <td><a title="<%= course.Coursename %>"><%= course.Coursename %></a></td>
                            <td><%= course.L %></td>
                            <td><%= course.T %></td>
                            <td><%= course.P %></td>
                            <td><%= course.J %></td>
                            <td><%= course.C %></td>
                            <td><a class="button is-dark is-rounded" align="Center" onclick="ReqSub('<%= course.Coursecode %>');">Register</a></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <script>
        function searchFunction() {
            var input, filter, table, tr, td, i, txtValue;
            input = document.getElementById("search");
            filter = input.value.toUpperCase();
            table = document.getElementById("courseTable");
            tr = table.getElementsByTagName("tr");
            for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[2];
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }
    </script>
    <script async type="text/javascript" src="../public/js/bulma.js"></script>
</body>

</html>
